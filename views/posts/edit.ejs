<%- include("../partials/header", {title: "Editing Post"}) %>

<div class="container">
	<h1 class="text-center mb-4 special-font">Editing '<%= post.name %>'</h1>
	
	<div class="row d-flex justify-content-center">
		<div class="col-lg-6">
			<form action="/posts/<%= post._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="post[name]" 
						   placeholder="Post name" value="<%= post.name %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="post[image]" 
						   placeholder="Image URL" value="<%= post.image %>">
				</div>
				<div class="form-group">
					<textarea class="form-control" placeholder="Description" 
							  name="post[desc]"><%= post.desc %></textarea>
				</div>
				<button class="btn btn-lg btn-primary btn-block">
					Submit
				</button>
			</form>
			<a href="/posts/<%= post._id %>" class="btn btn-sm btn-danger mt-3">Go Back</a>
		</div>
	</div>
</div>

<% include ../partials/footer %>