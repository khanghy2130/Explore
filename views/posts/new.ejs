<%- include("../partials/header", {title: "Making A Post"}) %>

<div class="container">
	<h1 class="text-center mb-4 special-font">Make new post</h1>
	
	<!-- control size and position -->
	<div class="row d-flex justify-content-center">
		<div class="col-lg-6">
			<form action="/posts" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="name" placeholder="Post title">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="image" placeholder="Image URL">
				</div>
				<div class="form-group">
					<textarea class="form-control" placeholder="Description" name="desc"></textarea>
				</div>
				<button class="btn btn-lg btn-primary btn-block">
					Submit
				</button>
			</form>

			<a href="/posts" class="btn btn-sm btn-danger mt-3">Go Back</a>
		</div>
	</div>
</div>

<% include ../partials/footer %>