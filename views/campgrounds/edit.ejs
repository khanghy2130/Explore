<%- include("../partials/header", {title: "Editing Campground"}) %>

<div class="container">
	<h1 class="text-center mb-4 special-font">Editing '<%= camp.name %>'</h1>
	
	<div class="row d-flex justify-content-center">
		<div class="col-lg-6">
			<form action="/campgrounds/<%= camp._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="campground[name]" 
						   placeholder="Campground name" value="<%= camp.name %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="campground[image]" 
						   placeholder="Image URL" value="<%= camp.image %>">
				</div>
				<div class="form-group">
					<textarea class="form-control" placeholder="Description" 
							  name="campground[desc]"><%= camp.desc %></textarea>
				</div>
				<button class="btn btn-lg btn-primary btn-block">
					Submit
				</button>
			</form>
			<a href="/campgrounds/<%= camp._id %>" class="btn btn-sm btn-danger mt-3">Go Back</a>
		</div>
	</div>
</div>

<% include ../partials/footer %>